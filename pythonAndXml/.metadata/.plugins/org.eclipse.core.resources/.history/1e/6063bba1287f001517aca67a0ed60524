from xml import etree

utilisateurs = etree.Element("users")

utilisateursData = [
                    ("101", "zorro", "danseur")
                    ("102", "Hulk", "Footballeur")
                    ("103", "Zidane", "Star")
                    ("104", "Beans", "Epicier")
                    ("105", "Batman", "Veterinaire")
                    ("106", "Spiderman", "Veterianire")
                    ]
for utilisateursInfo in utilisateursData:
    utilisateur = etree.SubElement(utilisateurs, "user")
    utilisateur.set("data-id", utilisateursData[0])
    nom = etree.SubElement(utilisateur, "nom")
    nom.text = utilisateursData[1]
    metier = etree.SubElement(utilisateur, "metier")
    metier.text = utilisateursData[2]

if __name__ == '__main__':
    pass